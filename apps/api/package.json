    "moment": "^2.30.1",
    "mongoose": "^8.1.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.6",
    "esbuild": "^0.19.11",
    "esbuild-register": "^3.5.0",
